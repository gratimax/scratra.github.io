body
  background-color #fff

.gh-fork-ribbon
  display block

.back-img
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  opacity 0.12
  background-size 900px 900px
  background-attachment fixed
  background-image url('../img/cat.png')
  background-position right -80px bottom -80px
  background-repeat no-repeat

pre.code
  background rgba(250, 250, 250, 0.5)
  border 1px solid #ccc
  border-radius 4px
  font-size 1.5em
  font-family Consolas, 'Liberation Mono', Courier, monospace
  font-weight normal
  padding 15px
  margin-bottom 16px

.main.home
  padding-top 60px
  background none

.main
  padding-top 30px

  & .row
    padding-top 30px

    &:first-child
      padding-top 0

    &.no-margin
      padding-top 0

aside, .styled-headings
  color #222

  & h1, h2
    font-family Georgia, serif
    font-weight bold
    margin 0

  & h1
    font-size 3.5em

  & h2
    font-size 2em

nav
  text-transform uppercase
  color #555
  letter-spacing 4px

  & h2
    margin 0px
    font-size 2em

  &.row

    padding-top 10px

    & h2
      display inline
      font-size 1.2em

    & .links
      width 808px
      margin 0 auto

    & a
      padding 10px
      margin-top 10px
      display inline-block

      border-bottom 3px solid #ccc

      &:hover
        border-bottom-color #aaa
      &:active
        border-bottom-color #777

    & .rest
      border-bottom 3px solid #ccc
      position absolute
      bottom 0px
      z-index -1
      display inline
      width 970px

  & a
    color #555
    font-family 'lucida console', monaco, 'andale mono', 'bitstream vera sans mono', consolas sans-serif !important

    &:hover
      color #777 !important

    &:active
      color #444 !important

    &:visited
      color #555